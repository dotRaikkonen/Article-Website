
<!--Edit Modal-->
<div class="modal fade" id="editTagModal" tabindex="-1" role="dialog" aria-labelledby="editTagModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editTagModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="editTagModalFormDiv" class="modal-body">

                <form asp-controller="Admin" asp-action="EditTag" id="EditTagForm" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="text-danger" asp-validation-summary="All"></div>
                    <input type="hidden" class="form-control" name="EditTagId" id="EditTagId" />
                    <div class="form-group">
                        <label name="EditTagNameLabel" id="EditTagNameLabel" class="col-form-label">
                            <kbd class="alert-success">Current Tag Name</kbd>
                        </label>
                        <input type="text" class="form-control" name="EditTagName" id="EditTagName" />
                    </div>
                    
                    <div class="form-group">
                        <label id="oldTagIcon" name="oldTagIcon" class="col-form-label"> <kbd class="alert-success">Current Tag Icon</kbd></label>
                        <br/>
                        <img id="editModalImage" style="width: 64px;"/>
                    </div>

                    <hr/>

                    <div class="form-group">
                        <label id="newTagIcon" name="newTagIcon" class="col-form-label">New Tag Icon</label>
                        <input type="file" class="form-control" name="EditTagFile" id="EditTagFile" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" id="editTagFormCloseButton" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <img id="ajaxLoadingImage" src="~/ajaxloading.gif" style="display: none; width: 50px" />
                        <button id="EditTagFormSubmit" type="submit" class="btn btn-primary">Edit</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<!--/Edit Modal-->