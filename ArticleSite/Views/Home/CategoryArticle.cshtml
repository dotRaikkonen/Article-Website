@model IEnumerable<Article>
@{
    ViewData["Title"] = "CategoryArticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="section ">

    <div class="container">
        <div class="row">

            <div class="row">
                <div class="col-md-12">
                    <div class="section-title text-center">
                        <h2>@ViewData["TagName"]</h2>
                    </div>
                </div>
                @foreach (var article in Model)
                {
                    <!-- post -->
                    <div class="col-md-4">
                        <div class="post">
                            <a class="post-img" asp-action="Article" asp-controller="Home" asp-route-id="@article.Id">
                                <img src="~/img/post-4.jpg" alt="">
                            </a>
                            <div class="post-body">
                                <div class="post-meta">
                                    <span class="post-date">@article.AddingDate.ToLongDateString()</span>
                                </div>
                                <h3 class="post-title">
                                    <a asp-route-id="@article.Id" asp-action="Article" asp-controller="Home">@article.Name</a>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <!-- /post -->
          
                }

            </div> 

        </div>
    </div>

</div>

