@model AddArticleModel
@{
    ViewData["Title"] = "AddArticle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

    <h2>Add New Article</h2>
    <hr />

    <form asp-action="AddArticle" asp-controller="Admin" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Article Name" required="">
        </div>

        <div class="form-group">
            <label asp-for="Text"></label>
            <textarea asp-for="Text" type="text" placeholder="Text" required="" rows="20"></textarea>
        </div>
        <div class="form-group">
            <label id="TagsLabelId" name="TagsLabelName">Tags</label>
            <br />
            <select asp-for="TagIds"
                    asp-items="@(new SelectList(ViewBag.Tags.Items, "Value", "Text"))" style="height: 350px">
                <option disabled="disabled">Please Select Tags</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="IsFeatured"></label>
            <input asp-for="IsFeatured" type="checkbox" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</main>